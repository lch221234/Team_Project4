<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.main.product.ProductMapper">
	<insert id="productReg" parameterType="com.shop.main.product.Product" >
		insert into product values (product_seq.nextval, #{category_code}, #{product_name}, #{product_price}, #{product_stock}, #{product_img})
	</insert>
	<update id="productUpdate" parameterType="com.shop.main.product.Product">
		update product set category_code = #{category_code}, product_name = #{product_name}, product_price = #{product_price}, product_stock = #{product_stock}, 
		product_img = #{product_img} where product_number = #{product_number}
	</update>
	<delete id="productDel" parameterType="com.shop.main.product.Product">
		delete from product where product_number = #{product_number}
	</delete>
</mapper>